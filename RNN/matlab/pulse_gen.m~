clear; close all;

% Data length %
LENGTH = 1000;

% Twitch force param %
P = 1;     % Peak force
CT = 7;    % Time to peak

rand_vector = normrnd(0, 1, LENGTH, 1);
pulse_vector = zeros(LENGTH, 1);

pulse_vector(rand_vector>2) = ...
    abs(                                                ...
        rand_vector(1:length(find(rand_vector>2))) .*   ...
        rand_vector(rand_vector>2));

plot(pulse_vector);

plot(twitch_force([1:LENGTH], P, CT));


plot(conv())